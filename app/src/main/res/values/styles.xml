<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--background-->
        <item name="android:windowBackground">@color/colorBackground</item>
        <!--<item name="android:colorBackground">#185</item> don't use if using windowBackground-->
        <item name="android:colorForeground">@color/colorAccent</item>
        <!--checkbox checked state-->
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <!--button pressed state-->
        <item name="colorControlHighlight">@color/colorAccent</item>
        <!--button default state-->
        <item name="colorButtonNormal">@color/colorPrimary</item>

        <item name="colorError">@color/colorError</item>

        <item name="editTextStyle">@style/AppTheme.EditText</item>
        <item name="android:editTextStyle">@style/AppTheme.EditText</item>

        <item name="buttonStyle">@style/AppTheme.Button</item>
        <item name="android:buttonStyle">@style/AppTheme.Button</item>

        <item name="checkboxStyle">@style/AppTheme.CheckBox</item>
        <item name="android:checkboxStyle">@style/AppTheme.CheckBox</item>

        <item name="spinnerStyle">@style/AppTheme.Spinner</item>
        <item name="android:spinnerStyle">@style/AppTheme.Spinner</item>

        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox" />

    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorOnBackground</item>
        <item name="android:textColorHint">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="titleTextColor">@color/colorOnPrimary</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.TabLayout" parent="Widget.AppCompat.ActionBar.TabBar">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabTextColor">@color/colorOnTab</item>
    </style>

    <style name="TextAppearance.CollapsingToolbarLayout.Collapsed" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.CollapsingToolbarLayout.Expanded" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.MountName" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/color_surface</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/raleway_medium</item>
    </style>

    <style name="LayoutStyle_Base">
        <item name="android:layout_marginLeft">@dimen/base_margin_left</item>
        <item name="android:layout_marginStart">@dimen/base_margin_left</item>
        <item name="android:layout_marginEnd">@dimen/base_margin_right</item>
        <item name="android:layout_marginRight">@dimen/base_margin_right</item>
    </style>

    <style name="LayoutStyle_Button" parent="LayoutStyle_Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>